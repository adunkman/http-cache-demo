.error-messages
  position: fixed
  right: 20px
  top: 0
  z-index: 1

  p
    background: linear-gradient(top, #f76363, #ed3434)
    border-radius: 0 0 3px 3px
    border: solid #fff
    border-width: 0 1px 1px 1px
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.15), 0 1px 0 rgba(0, 0, 0, 0.1), 0 0 10px #f76363
    color: #fff
    float: left
    font-weight: bold
    margin: 0 0 0 10px
    opacity: 0
    padding: 5px 10px
    text-transform: uppercase
    transform: translateY(-100%)
    transition: opacity 0.5s ease, transform 0.5s ease

    &.is-visible
      animation: throb 3s ease infinite
      opacity: 1
      transform: translateY(0)

@keyframes throb
  0%, 100%
    color: rgba(#fff, 0.8)
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.15), 0 1px 0 rgba(0, 0, 0, 0.1), 0 0 5px #f76363
  10%, 90%
    color: #fff
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.15), 0 1px 0 rgba(0, 0, 0, 0.1), 0 0 10px #f76363
