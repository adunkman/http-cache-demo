.request
  .container
    width: 33%

  button
    appearance: none
    color: inherit
    cursor: pointer
    font: inherit
    position: relative
    transition: border-color 0.5s linear
    width: 160px

    flowchart-element()

    &:hover, &:focus
      outline: none
      text-decoration: underline

    &:active
      background: linear-gradient(bottom, #fafafa, #f5f5f5)
      border: 1px solid #ddd
      box-shadow: inset 1px 1px 3px rgba(0,0,0,0.1)

    .will-force-reload&
      span:before
        content: "Force "

    .is-loading &
      border-color: #72c152
