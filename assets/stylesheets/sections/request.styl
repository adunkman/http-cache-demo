.request
  clearfix()

  .container
    float: left
    width: 33.33%

  button
    flowchart-button()
    transition: border-color 0.5s linear

    .will-force-reload&
      span:before
        content: "Force "

    .will-force-proxy-reload&
      span:before
        content: "Force! "

    .is-loading &
      border-color: #72c152

  .flag
    background: #f5f5f5
    border-radius: 3px
    border: 1px solid #ddd
    float: left
    font-size: 9pt
    font-weight: bold
    left: -16.665%
    margin-left: 95px
    opacity: 0
    padding: 5px 10px
    position: relative
    text-transform: uppercase
    top: 8px
    transition: opacity 0.2s linear

    &:after, &:before
      right: 100%
      top: 50%
      border: solid transparent
      content: " "
      height: 0
      width: 0
      position: absolute
      pointer-events: none

    &:after
      border-color: rgba(238, 238, 238, 0)
      border-right-color: #f5f5f5
      border-width: 7px
      margin-top: -7px

    &:before
      border-color: rgba(221, 221, 221, 0)
      border-right-color: #ddd
      border-width: 8px
      margin-top: -8px

    .will-force-reload&
      opacity: 1

    .skip-cache
      display: none

      .will-force-proxy-reload&
        display: inline
