*
  box-sizing: border-box

html
  -webkit-font-smoothing: antialiased
  background: #fff
  color: #222
  font-family: "Roboto", "Helvetica Neue", Helvetica, Arial, sans-serif
  min-height: 100%

body
  margin: 0
  padding: 20px

form
  display: none

flowchart-element()
  background: linear-gradient(top, #fafafa, #f5f5f5)
  border-radius: 5px
  border: 1px solid #ddd
  box-shadow: 1px 1px 3px rgba(0,0,0,0.1)
  display: block
  margin: 0 auto
  padding: 10px
  text-align: center
  width: 160px

flowchart-button()
  flowchart-element()

  appearance: none
  color: inherit
  cursor: pointer
  font: inherit
  position: relative

  &:hover, &:focus
    outline: none
    text-decoration: underline

  &:active
    background: linear-gradient(bottom, #fafafa, #f5f5f5)
    border: 1px solid #ddd
    box-shadow: inset 1px 1px 3px rgba(0,0,0,0.1)

  span
    display: inline !important
